    <script>
        let chartStatus = null;
        let chartTempo = null;
        let dadosCompletos = [];

        document.addEventListener('DOMContentLoaded', () => {
            inicializarGraficos();
            carregarDados();
        });

        async function carregarDados() {
            try {
                const response = await fetch('/relatorios/dados');
                const dados = await response.json();
                
                if (dados.success) {
                    dadosCompletos = dados.data;
                    atualizarDashboard(dados.data);
                    atualizarGraficos(dados.data);
                    atualizarTabela(dados.data);
                }
            } catch (error) {
                console.error('Erro:', error);
            }
        }

        function atualizarDashboard(dados) {
            const pendentes = dados.filter(d => d.status === 'pendente').length;
            const processadas = dados.filter(d => d.status === 'processada').length;
            
            document.getElementById('total-pendentes').textContent = pendentes;
            document.getElementById('total-processadas').textContent = processadas;
            document.getElementById('total-geral').textContent = dados.length;
        }

        function inicializarGraficos() {
            chartStatus = new Chart(document.getElementById('chartStatus'), {
                type: 'doughnut',
                data: {
                    labels: ['Pendentes', 'Prontas'],
                    datasets: [{
                        data: [0, 0],
                        backgroundColor: ['#ffc107', '#28a745'],
                        borderWidth: 4,
                        borderColor: '#1f1f1f'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: { 
                        legend: { 
                            position: 'bottom', 
                            labels: { 
                                color: '#fff', 
                                font: { size: 13, weight: '600' },
                                padding: 20
                            } 
                        } 
                    }
                }
            });
            
            chartTempo = new Chart(document.getElementById('chartTempo'), {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'Pedidos Prontos',
                        data: [],
                        borderColor: '#28a745',
                        backgroundColor: 'rgba(40, 167, 69, 0.2)',
                        tension: 0.4,
                        fill: true,
                        borderWidth: 3
                    }]
                },
                options: {
                    responsive: true,
                    plugins: { 
                        legend: { 
                            labels: { 
                                color: '#fff', 
                                font: { size: 13, weight: '600' } 
                            } 
                        } 
                    },
                    scales: { 
                        y: { 
                            beginAtZero: true, 
                            ticks: { color: '#999' }, 
                            grid: { color: '#333' } 
                        },
                        x: { 
                            ticks: { color: '#999' }, 
                            grid: { color: '#333' } 
                        }
                    }
                }
            });
        }

        function atualizarGraficos(dados) {
            const pendentes = dados.filter(d => d.status === 'pendente').length;
            const processadas = dados.filter(d => d.status === 'processada').length;
            
            chartStatus.data.datasets[0].data = [pendentes, processadas];
            chartStatus.update();
            
            const processamentoPorDia = calcularProcessamentoPorDia(dados);
            chartTempo.data.labels = processamentoPorDia.labels;
            chartTempo.data.datasets[0].data = processamentoPorDia.processadas;
            chartTempo.update();
        }

        function calcularProcessamentoPorDia(dados) {
            const hoje = new Date();
            const labels = [], processadas = [];
            
            for (let i = 6; i >= 0; i--) {
                const data = new Date(hoje);
                data.setDate(data.getDate() - i);
                const dataStr = data.toISOString().split('T')[0];
                labels.push(data.toLocaleDateString('pt-BR', { day: '2-digit', month: '2-digit' }));
                processadas.push(dados.filter(d => d.status === 'processada' && d.data_processamento?.startsWith(dataStr)).length);
            }
            
            return { labels, processadas };
        }

        function atualizarTabela(dados) {
            const tbody = document.getElementById('tabelaCorpo');
            tbody.innerHTML = '';
            dados.sort((a, b) => new Date(b.created_at) - new Date(a.created_at));
            
            dados.forEach(item => {
                const statusTexto = item.status === 'processada' ? 'Pronta' : 'Pendente';
                tbody.innerHTML += `
                    <tr>
                        <td><strong>${item.id}</strong></td>
                        <td>${item.descricao || 'N/A'}</td>
                        <td><span class="status-badge status-${item.status}">${statusTexto}</span></td>
                        <td><span class="prioridade-${item.prioridade}">${{alta: 'Alta', media: 'M√©dia', baixa: 'Baixa'}[item.prioridade] || item.prioridade}</span></td>
                        <td>${new Date(item.created_at).toLocaleString('pt-BR', {day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit'})}</td>
                        <td>${item.data_processamento ? new Date(item.data_processamento).toLocaleString('pt-BR', {day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit'}) : '-'}</td>
                    </tr>
                `;
            });
        }

        function filtrarDados() {
            const status = document.getElementById('filtroStatus').value;
            const data = document.getElementById('filtroData').value;
            let filtrados = [...dadosCompletos];
            if (status !== 'todos') filtrados = filtrados.filter(d => d.status === status);
            if (data) filtrados = filtrados.filter(d => d.created_at.split('T')[0] === data);
            atualizarTabela(filtrados);
        }

        async function atualizarDados() {
            const btn = document.querySelector('.btn-atualizar');
            btn.disabled = true;
            btn.textContent = '‚è≥ Atualizando...';
            await carregarDados();
            setTimeout(() => { btn.disabled = false; btn.textContent = 'üîÑ Atualizar'; }, 1000);
        }


        function fecharModal() {
            document.getElementById('modalDetalhes').style.display = 'none';
        }

        // Fechar modal ao clicar fora
        window.onclick = function(event) {
            const modal = document.getElementById('modalDetalhes');
            if (event.target === modal) {
                fecharModal();
            }
        }

