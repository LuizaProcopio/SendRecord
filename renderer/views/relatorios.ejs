<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relat√≥rios - Mount Vernon</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        /* ESTILO ESPEC√çFICO APENAS PARA RELAT√ìRIOS */
        body {
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            margin: 0;
            padding: 0;
        }

        .relatorios-page {
            padding: 30px;
            max-width: 1600px;
            margin: 0 auto;
        }

        /* Cards de Resumo */
        .cards-resumo {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            margin-bottom: 30px;
        }

        .card-resumo {
            background: linear-gradient(135deg, #2a2a2a 0%, #1f1f1f 100%);
            padding: 25px;
            border-radius: 12px;
            border: 1px solid #3a3a3a;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
            transition: transform 0.3s;
        }

        .card-resumo:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(196, 30, 58, 0.3);
        }

        .card-resumo h2 {
            font-size: 42px;
            margin: 0;
            color: #fff;
            font-weight: 700;
        }

        .card-resumo p {
            margin: 10px 0 0 0;
            color: #999;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .card-resumo .icone {
            font-size: 36px;
            margin-bottom: 10px;
        }

        /* Gr√°ficos */
        .graficos-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
        }

        .grafico-box {
            background: linear-gradient(135deg, #2a2a2a 0%, #1f1f1f 100%);
            padding: 30px;
            border-radius: 12px;
            border: 1px solid #3a3a3a;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        }

        .grafico-box h3 {
            color: #fff;
            font-size: 18px;
            margin: 0 0 20px 0;
            font-weight: 600;
        }

        /* Tabela Igual √† de Vendas */
        .table-section {
            background: #fff;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

        .table-header-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f0f0f0;
        }

        .table-header-actions h2 {
            margin: 0;
            color: #2c3e50;
            font-size: 24px;
            font-weight: 600;
        }

        .filters-row {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .filters-row select,
        .filters-row input[type="date"] {
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
            background: #f8f9fa;
            outline: none;
            transition: all 0.3s;
        }

        .filters-row select:focus,
        .filters-row input[type="date"]:focus {
            border-color: #c41e3a;
            background: white;
        }

        .btn-atualizar {
            padding: 10px 20px;
            background: linear-gradient(135deg, #c41e3a 0%, #a01818 100%);
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s;
        }

        .btn-atualizar:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(196, 30, 58, 0.4);
        }

        /* Tabela */
        .table-container {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            min-width: 1200px;
        }

        thead {
            background: #f8f9fa;
        }

        th {
            padding: 15px;
            text-align: left;
            color: #2c3e50;
            font-weight: 700;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid #e9ecef;
        }

        td {
            padding: 15px;
            color: #495057;
            font-size: 14px;
            border-bottom: 1px solid #f0f0f0;
        }

        tbody tr {
            transition: background 0.2s;
        }

        tbody tr:hover {
            background: #f8f9fa;
        }

        /* Status Badges */
        .status-badge {
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            display: inline-block;
        }

        .status-pendente {
            background: #fff3cd;
            color: #856404;
        }

        .status-processada {
            background: #d4edda;
            color: #155724;
        }

        .status-erro {
            background: #f8d7da;
            color: #721c24;
        }

        /* Prioridade */
        .prioridade-alta { background: #ffe5e5; color: #c41e3a; padding: 5px 12px; border-radius: 15px; font-size: 11px; font-weight: 600; }
        .prioridade-media { background: #fff8dc; color: #ff8c00; padding: 5px 12px; border-radius: 15px; font-size: 11px; font-weight: 600; }
        .prioridade-baixa { background: #e0f7fa; color: #0097a7; padding: 5px 12px; border-radius: 15px; font-size: 11px; font-weight: 600; }

        /* Bot√£o Ver */
        .btn-ver {
            padding: 8px 20px;
            background-color: #c41e3a;
            color: #fff;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            font-size: 12px;
            transition: all 0.3s;
        }

        .btn-ver:hover {
            background-color: #a01818;
            transform: translateY(-2px);
        }

        /* Bot√µes de Exportar */
        .export-buttons {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 2px solid #f0f0f0;
        }

        .btn-export {
            padding: 12px 24px;
            background: #28a745;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s;
        }

        .btn-export:hover {
            background: #218838;
            transform: translateY(-2px);
        }

        @media (max-width: 1200px) {
            .cards-resumo { grid-template-columns: repeat(2, 1fr); }
            .graficos-container { grid-template-columns: 1fr; }
        }

        @media (max-width: 768px) {
            .cards-resumo { grid-template-columns: 1fr; }
            .filters-row { flex-direction: column; width: 100%; }
            .filters-row select, .filters-row input { width: 100%; }
        }
    </style>
</head>
<body>
    <!-- HEADER COMPLETO COM LOGO E NAVEGA√á√ÉO -->
    <div class="header">
        <!-- LOGO -->
        <div class="logo">
            <img src="../img/Marca.png" alt="Logo da Loja" width="300">
        </div>

        <!-- CONTE√öDO DO HEADER (Info do usu√°rio + Navega√ß√£o) -->
        <%- include('partials/header') %>
    </div>
    
    <div class="relatorios-page">
        
        <!-- Cards de Resumo -->
        <div class="cards-resumo">
            <div class="card-resumo">
                <div class="icone">üì¶</div>
                <h2 id="total-pendentes">0</h2>
                <p>Pendentes</p>
            </div>
            
            <div class="card-resumo">
                <div class="icone">‚úÖ</div>
                <h2 id="total-processadas">0</h2>
                <p>Processadas</p>
            </div>
            
            <div class="card-resumo">
                <div class="icone">‚ùå</div>
                <h2 id="total-erros">0</h2>
                <p>Com Erro</p>
            </div>
            
            <div class="card-resumo">
                <div class="icone">üìã</div>
                <h2 id="total-geral">0</h2>
                <p>Total</p>
            </div>
        </div>

        <!-- Gr√°ficos -->
        <div class="graficos-container">
            <div class="grafico-box">
                <h3>üìä Status dos Pedidos</h3>
                <canvas id="chartStatus" style="max-height: 280px;"></canvas>
            </div>
            
            <div class="grafico-box">
                <h3>üìà Processamento por Dia</h3>
                <canvas id="chartTempo" style="max-height: 280px;"></canvas>
            </div>
        </div>

        <!-- Tabela -->
        <div class="table-section">
            <div class="table-header-actions">
                <h2>üìã Hist√≥rico de Processamento</h2>
                <div class="filters-row">
                    <select id="filtroStatus" onchange="filtrarDados()">
                        <option value="todos">Todos os Status</option>
                        <option value="pendente">Pendentes</option>
                        <option value="processada">Processadas</option>
                        <option value="erro">Com Erro</option>
                    </select>
                    <input type="date" id="filtroData" onchange="filtrarDados()">
                    <button class="btn-atualizar" onclick="atualizarDados()">üîÑ Atualizar</button>
                </div>
            </div>
            
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>DESCRI√á√ÉO</th>
                            <th>STATUS</th>
                            <th>PRIORIDADE</th>
                            <th>DATA CRIA√á√ÉO</th>
                            <th>DATA PROCESSAMENTO</th>
                        </tr>
                    </thead>
                    <tbody id="tabelaCorpo"></tbody>
                </table>
            </div>
            
            <div class="export-buttons">
                <button class="btn-export" onclick="exportarPDF()">üìÑ Exportar PDF</button>
                <button class="btn-export" onclick="exportarExcel()">üìä Exportar Excel</button>
            </div>
        </div>

    </div>

    <script>
        let chartStatus = null;
        let chartTempo = null;
        let dadosCompletos = [];

        document.addEventListener('DOMContentLoaded', () => {
            inicializarGraficos();
            carregarDados();
        });

        async function carregarDados() {
            try {
                const response = await fetch('/relatorios/dados');
                const dados = await response.json();
                
                if (dados.success) {
                    dadosCompletos = dados.data;
                    atualizarDashboard(dados.data);
                    atualizarGraficos(dados.data);
                    atualizarTabela(dados.data);
                }
            } catch (error) {
                console.error('Erro:', error);
            }
        }

        function atualizarDashboard(dados) {
            const pendentes = dados.filter(d => d.status === 'pendente').length;
            const processadas = dados.filter(d => d.status === 'processada').length;
            const erros = dados.filter(d => d.status === 'erro').length;
            
            document.getElementById('total-pendentes').textContent = pendentes;
            document.getElementById('total-processadas').textContent = processadas;
            document.getElementById('total-erros').textContent = erros;
            document.getElementById('total-geral').textContent = dados.length;
        }

        function inicializarGraficos() {
            chartStatus = new Chart(document.getElementById('chartStatus'), {
                type: 'doughnut',
                data: {
                    labels: ['Pendentes', 'Processadas', 'Com Erro'],
                    datasets: [{
                        data: [0, 0, 0],
                        backgroundColor: ['#ffc107', '#28a745', '#dc3545'],
                        borderWidth: 4,
                        borderColor: '#1f1f1f'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: { legend: { position: 'bottom', labels: { color: '#fff', font: { size: 13, weight: '600' } } } }
                }
            });
            
            chartTempo = new Chart(document.getElementById('chartTempo'), {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [
                        { label: 'Processadas', data: [], borderColor: '#28a745', backgroundColor: 'rgba(40, 167, 69, 0.2)', tension: 0.4, fill: true, borderWidth: 3 },
                        { label: 'Com Erro', data: [], borderColor: '#dc3545', backgroundColor: 'rgba(220, 53, 69, 0.2)', tension: 0.4, fill: true, borderWidth: 3 }
                    ]
                },
                options: {
                    responsive: true,
                    plugins: { legend: { labels: { color: '#fff', font: { size: 13, weight: '600' } } } },
                    scales: { 
                        y: { beginAtZero: true, ticks: { color: '#999' }, grid: { color: '#333' } },
                        x: { ticks: { color: '#999' }, grid: { color: '#333' } }
                    }
                }
            });
        }

        function atualizarGraficos(dados) {
            const pendentes = dados.filter(d => d.status === 'pendente').length;
            const processadas = dados.filter(d => d.status === 'processada').length;
            const erros = dados.filter(d => d.status === 'erro').length;
            
            chartStatus.data.datasets[0].data = [pendentes, processadas, erros];
            chartStatus.update();
            
            const processamentoPorDia = calcularProcessamentoPorDia(dados);
            chartTempo.data.labels = processamentoPorDia.labels;
            chartTempo.data.datasets[0].data = processamentoPorDia.processadas;
            chartTempo.data.datasets[1].data = processamentoPorDia.erros;
            chartTempo.update();
        }

        function calcularProcessamentoPorDia(dados) {
            const hoje = new Date();
            const labels = [], processadas = [], erros = [];
            
            for (let i = 6; i >= 0; i--) {
                const data = new Date(hoje);
                data.setDate(data.getDate() - i);
                const dataStr = data.toISOString().split('T')[0];
                labels.push(data.toLocaleDateString('pt-BR', { day: '2-digit', month: '2-digit' }));
                processadas.push(dados.filter(d => d.status === 'processada' && d.data_processamento?.startsWith(dataStr)).length);
                erros.push(dados.filter(d => d.status === 'erro' && d.data_processamento?.startsWith(dataStr)).length);
            }
            
            return { labels, processadas, erros };
        }

        function atualizarTabela(dados) {
            const tbody = document.getElementById('tabelaCorpo');
            tbody.innerHTML = '';
            dados.sort((a, b) => new Date(b.created_at) - new Date(a.created_at));
            
            dados.forEach(item => {
                tbody.innerHTML += `
                    <tr>
                        <td><strong>${item.id}</strong></td>
                        <td>${item.descricao || 'N/A'}</td>
                        <td><span class="status-badge status-${item.status}">${{pendente: 'Pendente', processada: 'Processada', erro: 'Erro'}[item.status]}</span></td>
                        <td><span class="prioridade-${item.prioridade}">${{alta: 'Alta', media: 'M√©dia', baixa: 'Baixa'}[item.prioridade]}</span></td>
                        <td>${new Date(item.created_at).toLocaleString('pt-BR', {day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit'})}</td>
                        <td>${item.data_processamento ? new Date(item.data_processamento).toLocaleString('pt-BR', {day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit'}) : '-'}</td>
                    </tr>
                `;
            });
        }

        function filtrarDados() {
            const status = document.getElementById('filtroStatus').value;
            const data = document.getElementById('filtroData').value;
            let filtrados = [...dadosCompletos];
            if (status !== 'todos') filtrados = filtrados.filter(d => d.status === status);
            if (data) filtrados = filtrados.filter(d => d.created_at.split('T')[0] === data);
            atualizarTabela(filtrados);
        }

        async function atualizarDados() {
            const btn = document.querySelector('.btn-atualizar');
            btn.disabled = true;
            btn.textContent = '‚è≥ Atualizando...';
            await carregarDados();
            setTimeout(() => { btn.disabled = false; btn.textContent = 'üîÑ Atualizar'; }, 1000);
        }

        async function verDetalhes(id) {
            const res = await fetch(`/relatorios/detalhes/${id}`);
            const dados = await res.json();
            if (dados.success) alert(`Detalhes #${id}\n\n${JSON.stringify(dados.data, null, 2)}`);
        }

        function exportarPDF() { alert('Exporta√ß√£o PDF em desenvolvimento'); }
        function exportarExcel() { alert('Exporta√ß√£o Excel em desenvolvimento'); }
    </script>
</body>
</html>