<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relat√≥rios - Mount Vernon</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        /* ESTILO ESPEC√çFICO APENAS PARA RELAT√ìRIOS */
        body {
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            margin: 0;
            padding: 0;
        }

        .relatorios-page {
            padding: 30px;
            max-width: 1600px;
            margin: 0 auto;
        }

        /* Cards de Resumo - APENAS 3 CARDS */
        .cards-resumo {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-bottom: 30px;
        }

        .card-resumo {
            background: linear-gradient(135deg, #2a2a2a 0%, #1f1f1f 100%);
            padding: 25px;
            border-radius: 12px;
            border: 1px solid #3a3a3a;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
            transition: transform 0.3s;
        }

        .card-resumo:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(196, 30, 58, 0.3);
        }

        .card-resumo h2 {
            font-size: 42px;
            margin: 0;
            color: #fff;
            font-weight: 700;
        }

        .card-resumo p {
            margin: 10px 0 0 0;
            color: #999;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .card-resumo .icone {
            font-size: 36px;
            margin-bottom: 10px;
        }

        /* Gr√°ficos */
        .graficos-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
        }

        .grafico-box {
            background: linear-gradient(135deg, #2a2a2a 0%, #1f1f1f 100%);
            padding: 30px;
            border-radius: 12px;
            border: 1px solid #3a3a3a;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        }

        .grafico-box h3 {
            color: #fff;
            font-size: 18px;
            margin: 0 0 20px 0;
            font-weight: 600;
        }

        /* Tabela Igual √† de Vendas */
        .table-section {
            background: #fff;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

        .table-header-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f0f0f0;
        }

        .table-header-actions h2 {
            margin: 0;
            color: #2c3e50;
            font-size: 24px;
            font-weight: 600;
        }

        .filters-row {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .filters-row select,
        .filters-row input[type="date"] {
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
            background: #f8f9fa;
            outline: none;
            transition: all 0.3s;
        }

        .filters-row select:focus,
        .filters-row input[type="date"]:focus {
            border-color: #c41e3a;
            background: white;
        }

        .btn-atualizar {
            padding: 10px 20px;
            background: linear-gradient(135deg, #c41e3a 0%, #a01818 100%);
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s;
        }

        .btn-atualizar:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(196, 30, 58, 0.4);
        }

        /* Tabela */
        .table-container {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            min-width: 1000px;
        }

        thead {
            background: #f8f9fa;
        }

        th {
            padding: 15px;
            text-align: left;
            color: #2c3e50;
            font-weight: 700;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid #e9ecef;
        }

        td {
            padding: 15px;
            color: #495057;
            font-size: 14px;
            border-bottom: 1px solid #f0f0f0;
        }

        tbody tr {
            transition: background 0.2s;
        }

        tbody tr:hover {
            background: #f8f9fa;
        }

        /* Status Badges */
        .status-badge {
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            display: inline-block;
        }

        .status-pendente {
            background: #fff3cd;
            color: #856404;
        }

        .status-processada {
            background: #d4edda;
            color: #155724;
        }

        /* Prioridade */
        .prioridade-alta { background: #ffe5e5; color: #c41e3a; padding: 5px 12px; border-radius: 15px; font-size: 11px; font-weight: 600; }
        .prioridade-media { background: #fff8dc; color: #ff8c00; padding: 5px 12px; border-radius: 15px; font-size: 11px; font-weight: 600; }
        .prioridade-baixa { background: #e0f7fa; color: #0097a7; padding: 5px 12px; border-radius: 15px; font-size: 11px; font-weight: 600; }

        /* Bot√£o Ver */
        .btn-ver {
            padding: 8px 20px;
            background-color: #c41e3a;
            color: #fff;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            font-size: 12px;
            transition: all 0.3s;
        }

        .btn-ver:hover {
            background-color: #a01818;
            transform: translateY(-2px);
        }

        /* Bot√µes de Exportar */
        .export-buttons {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 2px solid #f0f0f0;
        }

        .btn-export {
            padding: 12px 24px;
            background: #28a745;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s;
        }

        .btn-export:hover {
            background: #218838;
            transform: translateY(-2px);
        }

        /* MODAL DE DETALHES BONITO */
        .modal-detalhes {
            display: none;
            position: fixed;
            z-index: 9999;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            align-items: center;
            justify-content: center;
        }

        .modal-detalhes-content {
            background: white;
            padding: 0;
            border-radius: 12px;
            width: 90%;
            max-width: 600px;
            box-shadow: 0 10px 50px rgba(0, 0, 0, 0.5);
            animation: slideIn 0.3s ease;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .modal-detalhes-header {
            background: linear-gradient(135deg, #c41e3a 0%, #a01818 100%);
            color: white;
            padding: 20px 30px;
            border-radius: 12px 12px 0 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-detalhes-header h2 {
            margin: 0;
            font-size: 22px;
            font-weight: 600;
        }

        .modal-detalhes-close {
            background: none;
            border: none;
            color: white;
            font-size: 28px;
            cursor: pointer;
            line-height: 1;
            padding: 0;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .modal-detalhes-close:hover {
            opacity: 0.7;
        }

        .modal-detalhes-body {
            padding: 30px;
        }

        .detalhe-item {
            margin-bottom: 20px;
            padding-bottom: 20px;
            border-bottom: 1px solid #f0f0f0;
        }

        .detalhe-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .detalhe-label {
            font-size: 12px;
            color: #6c757d;
            text-transform: uppercase;
            font-weight: 600;
            margin-bottom: 5px;
            letter-spacing: 0.5px;
        }

        .detalhe-valor {
            font-size: 16px;
            color: #2c3e50;
            font-weight: 500;
        }

        @media (max-width: 1200px) {
            .cards-resumo { grid-template-columns: repeat(3, 1fr); }
            .graficos-container { grid-template-columns: 1fr; }
        }

        @media (max-width: 768px) {
            .cards-resumo { grid-template-columns: 1fr; }
            .filters-row { flex-direction: column; width: 100%; }
            .filters-row select, .filters-row input { width: 100%; }
        }
    </style>
</head>
