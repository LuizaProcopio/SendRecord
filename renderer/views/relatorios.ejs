        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
        
        URL.revokeObjectURL(url);
        
        alert('‚úÖ Relat√≥rio baixado com sucesso!');
        
    } catch (error) {
        console.error('Erro:', error);
        alert('Erro ao gerar relat√≥rio.');
    }
}
        async function exportarExcel() {
    try {
        // Buscar dados atuais
        const status = document.getElementById('filtroStatus').value;
        const data = document.getElementById('filtroData').value;
        let dadosExportar = [...dadosCompletos];
        
        if (status !== 'todos') dadosExportar = dadosExportar.filter(d => d.status === status);
        if (data) dadosExportar = dadosExportar.filter(d => d.created_at.split('T')[0] === data);
        
        // Criar CSV
        let csv = 'ID;Pedido;Status;Prioridade;Data Cria√ß√£o;Data Processamento\n';
        
        dadosExportar.forEach(item => {
            const statusTexto = item.status === 'processada' ? 'Pronta' : 'Pendente';
            const prioridadeTexto = {alta: 'Alta', media: 'M√©dia', baixa: 'Baixa'}[item.prioridade];
            const dataCriacao = new Date(item.created_at).toLocaleString('pt-BR');
            const dataProcessamento = item.data_processamento ? new Date(item.data_processamento).toLocaleString('pt-BR') : '-';
            
            csv += `${item.id};${item.descricao};${statusTexto};${prioridadeTexto};${dataCriacao};${dataProcessamento}\n`;
        });
        
        // Criar arquivo para download
        const blob = new Blob(['\ufeff' + csv], { type: 'text/csv;charset=utf-8;' });
        const link = document.createElement('a');
        const url = URL.createObjectURL(blob);
        
        link.setAttribute('href', url);
        link.setAttribute('download', `relatorio_pedidos_${new Date().toISOString().split('T')[0]}.csv`);
