<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/styleLogin.css">
    <title>Mount Vernon - Login</title>
</head>
<body>
    <div class="login-container">
        <!-- Exibir mensagem de erro se existir -->
        <% if (typeof erro !== 'undefined' && erro) { %>
            <div class="error-message">
                <p><%= erro %></p>
            </div>
        <% } %>
        
        <div class="logo-container">
            <div class="logo">
                <img src="/img/Marca.png" alt="Mount Vernon Logo" width="300">
            </div>
        </div>

        <!-- Formulário que envia para o servidor Express -->
        <form action="/login" method="POST" id="loginForm">
            <div class="form-group">
                <input 
                    type="text" 
                    name="nome" 
                    class="form-input" 
                    placeholder="Digite seu Nome" 
                    required
                >
            </div>
            
            <div class="form-group">
                <input 
                    type="password" 
                    name="senha" 
                    class="form-input" 
                    placeholder="Digite sua senha" 
                    required
                >
            </div>
            
            <button type="submit" class="login-button">
                Acessar Conta
            </button>

            <div class="forgot-password">
                <a href="/forgot-password" id="forgotPassword">Recuperar senha »</a>
            </div>
        </form>
    </div>
    
    <script src="/js/login.js"></script>
</body>
</html>
